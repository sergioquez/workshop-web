pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    try {
                        echo "BUILD JOB"

                    }
                    catch (Exception e){
                        
                    }
                }
                
                
            }
        }
        stage('Tests') {
            steps {
                script{
                    try {
                        echo "TESTS JOB"
                    }
                    catch (Exception e){
                        
                    }
                   
                }
                
            }
        }
        stage('Deploy') {
            steps {
                script{
                    try{
                        
                       sh''' #!/bin/bash
                        pwd
                        echo " "
                        chmod 777 index.html
                        scp -i /var/jenkins_home/workshop.pem -o stricthostkeychecking=no index.html ec2-user@3.133.141.57:/var/www/html

                        '''


                    }
                    catch (Exception e){

                    }
                   
                }
                
            }
        }
        

    }
    post { 
        always { 
            script{
                echo "Post always"
            }
            
        }
        
        success {
            script {
                echo "success"
            }
        }

        failure {
            script {
                echo "failure"
            }
            
        }

        unstable {
            script {
                echo "Unstable"
            }
        }
    }
}